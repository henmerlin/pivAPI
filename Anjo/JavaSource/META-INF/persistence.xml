<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="vu">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<jta-data-source>java:/co_hsqldb</jta-data-source>
		<class>entidades.UsuarioEfika</class>
		<class>entidades.Equipe</class>
		<class>entidades.sistema.Produto</class>
		<class>entidades.sistema.SubProdutoMotivo</class>
		<class>entidades.sistema.InfoProduto</class>
		<class>entidades.sistema.Transmissao</class>
		<class>entidades.sistema.Duvida</class>
		<class>entidades.sistema.DetalheDuvida</class>
		<class>entidades.sistema.Solucao</class>
		<class>entidades.sistema.Modelo</class>
		<class>entidades.sistema.Fabricante</class>
		<class>entidades.sistema.Equipamento</class>
		<class>entidades.sistema.InfoEquipamento</class>
		<class>entidades.sistema.Atendimento</class>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect"/>
			<property name="hibernate.hbm2ddl.auto" value="update"/>
		</properties>
	</persistence-unit>
</persistence>
